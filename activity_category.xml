<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".category">

    <Button
        android:id="@+id/crisis_help"
        android:layout_width="132dp"
        android:layout_height="135dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/crysis"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/healthcare_textview" />

    <Button
        android:id="@+id/education_help"
        android:layout_width="132dp"
        android:layout_height="135dp"


        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/book"
        app:layout_constraintEnd_toStartOf="@+id/food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_category" />

    <Button
        android:id="@+id/home_items"
        android:layout_width="132dp"
        android:layout_height="135dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="8dp"


        android:background="@drawable/home"
        app:layout_constraintBaseline_toBaselineOf="@+id/health_care"
        app:layout_constraintEnd_toStartOf="@+id/health_care"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/food"
        android:layout_width="132dp"
        android:layout_height="135dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"


        android:layout_marginEnd="67dp"
        android:background="@drawable/fod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/education_help"
        app:layout_constraintTop_toBottomOf="@+id/select_category" />

    <Button
        android:id="@+id/health_care"
        android:layout_width="132dp"
        android:layout_height="135dp"
        android:layout_marginTop="73dp"


        android:layout_marginEnd="64dp"
        android:background="@drawable/health"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food" />

    <TextView
        android:id="@+id/healthcare_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="13dp"
        android:text="Health Care"
        android:textColor="#ffffff"
        android:textSize="15"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/health_care"
        app:layout_constraintTop_toBottomOf="@+id/health_care" />

    <TextView
        android:id="@+id/eduaction_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="8dp"
        android:text="Education Help "
        android:textColor="#ffffff"
        android:textSize="15"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/home_items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/education_help"
        app:layout_constraintVertical_bias="0.456" />

    <TextView
        android:id="@+id/crisis_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="22dp"
        android:text="Crisis Help"
        android:textColor="#ffffff"
        android:textSize="15"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/crisis_help"
        app:layout_constraintTop_toBottomOf="@+id/crisis_help" />

    <TextView
        android:id="@+id/home_items_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="28dp"
        android:text="Home items"
        android:textColor="#ffffff"
        android:textSize="15"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/home_items"
        app:layout_constraintTop_toBottomOf="@+id/home_items" />

    <TextView
        android:id="@+id/food_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Food "
        android:textColor="#ffffff"
        android:textSize="15"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/health_care"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toEndOf="@+id/eduaction_textview"
        app:layout_constraintTop_toBottomOf="@+id/food"
        app:layout_constraintVertical_bias="0.367" />

    <TextView
        android:id="@+id/select_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="127dp"
        android:text="Select a Category"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="43dp"


        android:layout_marginEnd="53dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toTopOf="@+id/education_help"
        app:layout_constraintEnd_toStartOf="@+id/select_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
