<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".category">

    <Button
        android:id="@+id/crisis_help"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_marginTop="492dp"


        android:background="@drawable/crysis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/education_help"
        android:layout_width="113dp"
        android:layout_height="119dp"


        android:layout_marginStart="50dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/book"
        app:layout_constraintEnd_toStartOf="@+id/food"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_category" />

    <Button
        android:id="@+id/home_items"
        android:layout_width="107dp"
        android:layout_height="113dp"
        android:layout_marginStart="44dp"
        android:layout_marginEnd="8dp"


        android:background="@drawable/home"
        app:layout_constraintBaseline_toBaselineOf="@+id/health_care"
        app:layout_constraintEnd_toStartOf="@+id/health_care"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/food"
        android:layout_width="117dp"
        android:layout_height="117dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"


        android:layout_marginEnd="67dp"
        android:background="@drawable/fod"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/education_help"
        app:layout_constraintTop_toBottomOf="@+id/select_category" />

    <Button
        android:id="@+id/health_care"
        android:layout_width="118dp"
        android:layout_height="123dp"
        android:layout_marginTop="73dp"


        android:layout_marginEnd="64dp"
        android:background="@drawable/health"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food" />

    <TextView
        android:id="@+id/healthcare_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="13dp"
        android:text="Health Care"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/health_care"
        app:layout_constraintTop_toBottomOf="@+id/health_care" />

    <TextView
        android:id="@+id/eduaction_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="8dp"
        android:text="@string/EducationHelp"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/home_items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/education_help"
        app:layout_constraintVertical_bias="0.456" />

    <TextView
        android:id="@+id/home_items_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="28dp"
        android:text="Home items"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/home_items"
        app:layout_constraintTop_toBottomOf="@+id/home_items" />

    <TextView
        android:id="@+id/food_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Food"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/health_care"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toEndOf="@+id/eduaction_textview"
        app:layout_constraintTop_toBottomOf="@+id/food"
        app:layout_constraintVertical_bias="0.367" />

    <TextView
        android:id="@+id/select_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="127dp"
        android:text="Select a Category"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_crysis"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_crysis"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="43dp"


        android:layout_marginEnd="53dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toTopOf="@+id/education_help"
        app:layout_constraintEnd_toStartOf="@+id/select_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Crisis"
        android:textColor="#F8F8F8"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crisis_help"
        app:layout_constraintVertical_bias="0.196" />


</android.support.constraint.ConstraintLayout>
